{% extends "layout.njk" %}

{% block content %}

    <div class="card table-container">
        <a href="/members/create">Novo</a>
        <table width="100%">
            <thead>
                <tr>
                    <th>Membro</th>
                    <th>E-mail</th>
                    <th>Peso</th>
                    <th>Altura</th>
                    <th>Ação</th>
                </tr>
                <tbody>

                    {% for member in members %}

                        <tr>
                            <td>
                                <span style="background-image: url({{member.avatar_url}})"></span>
                                {{member.name}}
                            </td>
                            <td>{{member.email}}</td>
                            <td>{{member.weight}}</td>
                            <td>{{member.height}}</td>
                            <td>
                                <a href="/members/{{member.id}}">Ver</a>
                            </td>
                        </tr>

                    {% endfor %}

                </tbody>
            </thead>
        </table>
    </div>

{% endblock content %}